<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="User" table="user">
        <unique-constraints>
            <unique-constraint columns="email"></unique-constraint>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="email" column="email" type="string" length="72" nullable="false" unique="true" />
        <field name="password" column="password" type="string" length="60" nullable="false"/>
        <field name="deleted" column="deleted" type="boolean" nullable="false">
            <options>
                <option name="default">false</option>
            </options>
        </field>
        <field name="activated" column="activated" type="boolean" nullable="false">
            <options>
                <option name="default">true</option>
            </options>
        </field>

        <field name="memberSince" column="memberSince" type="datetime" nullable="false">
            <options>
                <option name="default"></option>
            </options>
        </field>

        <many-to-many field="roles" target-entity="Role">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="user_role">
                <join-columns>
                    <join-column name="userId" referenced-column-name="id" nullable="false" unique="false" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="roleId" referenced-column-name="id"  nullable="false" unique="false" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>
